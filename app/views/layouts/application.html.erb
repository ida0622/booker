<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header class="sticky-top">
    <h1 class="center">Bookers</h1>
    <% if user_signed_in? %>
    <ul class="nav nav-tabs pull-right ">
            <li role="presentation"><%= link_to 'Home', user_path(current_user.id) %></li>
            <li role="presentation"><%= link_to 'Users', users_path %></li>
            <li role="presentation"><%= link_to 'Books' , books_path %></li>
            <li role="presentation"><%= link_to 'logout', destroy_user_session_path, method: :delete %></li>
          </ul>
        <% else %>
        <ul class="nav nav-tabs pull-right">
            <li role="presentation"><%= link_to 'Home', root_path %></li>
            <li role="presentation"><%= link_to 'About', about_path %></li>
            <li role="presentation"><%= link_to 'sign up', new_user_registration_path %></li>
            <li role="presentation"><%= link_to 'login', new_user_session_path %></li>
            </ul>
            <% end %>
          </header>
          <p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
            <div class="container" >
    <%= yield %>
  </div>
    <footer class="fixed-bottom pull-right " >CopyRight Infratop.inc</footer>
  </body>
</html>
