<h1>User info</h1>

<div class="profile-container">
    
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><br>
    <p></p><br>
    <p></p><br>
    <p></p><br>
    <p>Name:<%= @user.name %></p>
    <p>Introduction:<%= @user.introduction %></p>

	<% if @user.id == current_user.id %>
        <p><%= link_to "profile update", edit_user_path(@user), class: "btn btn-default" %></p>
    <% end %>
</div>